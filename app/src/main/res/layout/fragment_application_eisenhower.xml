<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Eisenhower.ApplicationEisenhowerFragment"
    android:gravity="center"
    android:weightSum="2"
    android:paddingTop="40dp"
    android:paddingBottom="60dp"
    android:paddingStart="5dp"
    android:paddingEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/urgent"
            android:gravity="center"
            android:layout_margin="3dp"
            android:letterSpacing="0.5" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/neurgent"
            android:gravity="center"
            android:layout_margin="3dp"
            android:letterSpacing="0.5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/i_nm_np_no_nr_nt_na_nn_nt"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/llUrgImp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:background="@drawable/textview_shape"
            android:backgroundTint="@color/pink"
            android:layout_marginEnd="10dp"
            android:padding="10dp"/>
        <LinearLayout
            android:id="@+id/llNeurgImp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:background="@drawable/textview_shape"
            android:backgroundTint="@color/lightbleo"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/n_ne_ni_nm_np_no_nr_nt_na_nn_nt"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:id="@+id/llUrgNeimp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:background="@drawable/textview_shape"
            android:backgroundTint="@color/lightgreen"
            android:layout_marginEnd="10dp"
            android:padding="10dp"/>
        <LinearLayout
            android:id="@+id/llNeurgNeimp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:background="@drawable/textview_shape"
            android:backgroundTint="@color/lightyellow"
            android:padding="10dp"/>
    </LinearLayout>
</LinearLayout>







